@model sixteenBars.Library.Track
@Styles.Render("~/Content/themes/base/css")


<h1>Edit Track</h1>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h2>@ViewBag.ErrorMessage</h2>
    <div class="form">
        

        @Html.HiddenFor(model => model.Id)

        <div class="form-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="form-element">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div id="trackApp">
            <div ng-controller="AlbumController">
                <div class="form-label">
                    <label for="AlbumTitle">Album Title</label>
                </div>
                <div class="form-element">
                    @Html.TextBoxFor(model => model.Album.Title, new { ng_model = "albumTitle", ng_keyup = "autoCompleteAlbum()", ng_init = string.Format("albumTitle = '{0}'", Model.Album.Title) })
                    @Html.ValidationMessageFor(model => model.Album.Title)

                    <div class="suggestions album-suggestions">
                        <p><strong>Suggested Album(s)</strong><span style="float:right;" class="close glyphicon glyphicon-remove-circle"></span></p>
                        <img class="loading" src="~/Images/loading.gif" alt="loading" />
                        <p class="empty">No Albums Found</p>
                        <div class="suggestion" ng-repeat="album in albums">
                            <div ng-click="selectSuggestedAlbum(album.Title,album.ReleaseDate,album.Artist.Name,'albumTitle','ReleaseDate','artistName')" class="suggested-artist">{{album.Title}}</div>
                        </div>
                    </div>

                </div>
                

                <div class="form-label">
                    <label for="AlbumArtistName">Artist</label>
                </div> 
                <div class="form-element">
                    @Html.TextBoxFor(model => model.Album.Artist.Name, new { ng_model = "artistName",ng_blur="existTrack()", ng_keyup="autoCompleteArtist('artistName')",ng_init = string.Format("artistName = '{0}'", Model.Album.Artist.Name) })
                    @Html.ValidationMessageFor(model => model.Album.Artist.Name)

                    <div class="suggestions artist-suggestions">
                        <p><strong>Suggested Artist(s)</strong><span style="float:right;" class="close glyphicon glyphicon-remove-circle"></span></p>
                        <img class="loading" src="~/Images/loading.gif" alt="loading" />
                        <p class="empty">No Artists Found</p>
                        <div class="suggestion" ng-repeat="artist in artists">
                            <div ng-click="selectSuggestedArtist(artist.Name,'artistName')" class="suggested-artist">{{artist.Name}}</div>
                        </div>
                    </div>
                </div>


                <div class="form-label">
                    <label for="ReleaseDate">Track Release Date</label>
                </div>
                <div class="form-element">
                    @Html.TextBoxFor(model => model.ReleaseDate, new { ng_model = "releaseDate", ng_init = string.Format("releaseDate = '{0}'", Model.ReleaseDate != null ? Model.ReleaseDate.Value.ToString("MM/dd/yyyy") : DateTime.Now.ToString("MM/dd/yyyy")) })
                    @Html.ValidationMessageFor(model => model.ReleaseDate)
                </div>
                </div>
            </div>

        <div style="margin:15px 0">
            <input type="submit" value="Save" class="btn-inverse" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Track", new { @class = "btn btn-back" })
    &nbsp;
    @Html.ActionLink("Delete", "Delete", "Track", new { id = Model.Id }, new { @class = "btn btn-remove" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            var minimumDate = new Date(1978, 1 - 1, 1);
            var today = new Date();
            var maximumDate = new Date(today.getFullYear(), today.getMonth(), today.getDate());
            $("#ReleaseDate").datepicker({ minDate: minimumDate, maxDate: maximumDate });
        });
    </script>

<script src="~/Scripts/sixteenbars-track-app.js"></script>
<script src="~/Scripts/sixteenbars-autocomplete-functions.js"></script>
<script src="~/Scripts/sixteenbars-exist-functions.js"></script>
<script src="~/Scripts/sixteenbars-album-autocomplete.js"></script>
}
