@model sixteenBars.Library.Track

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Track</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Track</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            Album Title
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Album.Title)
            @Html.ValidationMessageFor(model => model.Album.Title)
        </div>

        <div class="editor-label">
            Artist
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Album.Artist.Name)
            @Html.ValidationMessageFor(model => model.Album.Artist.Name)
        </div>


        <div class="editor-label">
            Album Release Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ReleaseDate)
            @Html.ValidationMessageFor(model => model.ReleaseDate)
        </div>

        
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
