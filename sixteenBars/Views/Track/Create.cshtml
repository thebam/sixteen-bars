@model sixteenBars.Models.TrackViewModel
@Styles.Render("~/Content/themes/base/css")
<h1>Add New Track</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h2>@ViewBag.ErrorMessage</h2>

    <form name="trackForm">
        <div class="form">
            <div id="trackApp">
                <div ng-controller="AlbumController">
                    <div class="form-label">
                        @Html.LabelFor(model => model.Title)
                    </div>
                    <div class="form-element">
                        <input type="text" id="title" name="Title" ng-model="title" required ng-blur="existTrack()" class="form-control" />
                    </div>


                    <div class="form-label">
                        @Html.LabelFor(model => model.AlbumTitle)
                    </div>
                    <div class="form-element">
                        <input type="text" id="albumTitle" name="AlbumTitle" ng-model="albumTitle" required ng-keyup="autoCompleteAlbum()" ng-blur="existTrack()" class="form-control" />
                        <div class="suggestions album-suggestions">
                            <p><strong>Suggested Album(s)</strong><span style="float:right;" class="close glyphicon glyphicon-remove-circle"></span></p>
                            <img class="loading" src="~/Images/loading.gif" alt="loading" />
                            <p class="empty">No Albums Found</p>
                            <div class="suggestion" ng-repeat="album in albums">
                                <div ng-click="selectSuggestedAlbum(album.Title,album.ReleaseDate,album.Artist.Name,'albumTitle','releaseDate','artistName')" class="suggested-artist">{{album.Title}}</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-label">
                        @Html.LabelFor(model => model.ArtistName)
                    </div>
                    <div class="form-element">
                        <input type="text" id="artistName" ng-model="artistName" name="ArtistName" required ng-blur="existTrack()" ng-keyup="autoCompleteArtist('artistName')" class="form-control" />
                        <div class="suggestions artist-suggestions">
                            <p><strong>Suggested Artist(s)</strong><span style="float:right;" class="close glyphicon glyphicon-remove-circle"></span></p>
                            <img class="loading" src="~/Images/loading.gif" alt="loading" />
                            <p class="empty">No Artists Found</p>
                            <div class="suggestion" ng-repeat="artist in artists">
                                <div ng-click="selectSuggestedArtist(artist.Name,'artistName')" class="suggested-artist">{{artist.Name}}</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-label">
                        <label for="ReleaseDate">Track Release Date</label>
                    </div>
                    <div class="form-element">
                        <input type="text" id="releaseDate" ng-model="releaseDate" name="ReleaseDate" required ng-blur="existTrack()"  class="form-control"/>
                    </div>

                    <div class="form-label">
                        <label for="trackVideo">Track Video</label>
                    </div>
                    <div class="form-element">
                        @Html.TextAreaFor(model => model.Video, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Video)
                    </div>


                    <div class="form-label">
                        @Html.LabelFor(model => model.Order)
                    </div>
                    <div class="form-element">
                        @Html.TextBoxFor(model => model.Order, new { @class = "form-control", @type = "number", @min = "1",@Value="1" })
                        @Html.ValidationMessageFor(model => model.Order)
                    </div>

                    <p style="margin-top:15px;">
                        <input type="submit" value="Add Track" ng-hide="blnTrackExists" ng-init="false" class="btn" />
                        @Html.ActionLink("Cancel", "Index", "Track",null, new { @class = "btn btn-inverse" })
                    </p>


                    <p ng-show="blnTrackExists">
                        The track already exists.
                    </p>
                </div>
            </div>
        </div>
    </form>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            var minimumDate = new Date(1978, 1 - 1, 1);
            var today = new Date();
            var maximumDate = new Date(today.getFullYear(), today.getMonth(), today.getDate());
            $("#releaseDate").datepicker({ minDate: minimumDate, maxDate: maximumDate });
        });
    </script>

    <script src="~/Scripts/sixteenbars-track-app.js"></script>
    <script src="~/Scripts/sixteenbars-autocomplete-functions.js"></script>
    <script src="~/Scripts/sixteenbars-exist-functions.js"></script>
    <script src="~/Scripts/sixteenbars-album-autocomplete.js"></script>
}
