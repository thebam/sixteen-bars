<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />
    <meta name="author" content="@ViewBag.MetaAuthor" />


    <meta property="fb:app_id" content="@ViewBag.OGAppID" />

    <!-- Facebook, LinkedIn, Pinterest Open Graph data -->
    <meta property="og:site_name" content="Rhyme 4 Rhyme" />
    <meta property="og:title" content="@ViewBag.OGTitle" />
    <meta property="og:description" content="@ViewBag.OGDescription" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@ViewBag.OGURL" />
    <meta property="og:image" content="@ViewBag.OGImage" />



    <!-- Twitter data -->
    <meta name="twitter:card" content="summary_large_image" />
    @Html.Raw("<meta name=\"twitter:site\" content=\"@rhyme4rhymeweb\" />")
    <meta name="twitter:title" content="@ViewBag.TwitterTitle" />
    <meta name="twitter:description" content="@ViewBag.TwitterDescription" />
    <meta name="twitter:image" content="@ViewBag.TwitterImage" />







    <link rel="icon" type="image/png" href="http://www.rhyme4rhyme.com/Images/rhyme-4-rhyme-favicon.png">

    <!-- Bootstrap -->
    <!--Use the CDN to fix a bug that appears in Chrome where glyphicons dont display-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link href="~/Content/sixteenBars.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    </style>
   
</head>



<body>
    <header>
        <nav>
            <div class="container">

                
                
                    <div id="searchApp" ng-app="SearchApp">
                        <div ng-controller="SearchController">
                            <div class="col-md-3">
                                @Html.ActionLink(" ", "Index", "Home", null, new { @class = "logo" })
                            </div>
                            <div class="col-md-6">
                                <div class="search-bar" role="search">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search quotes, tracks, albums, or artists" ng-model="searchTerm" name="srch-term" id="srch-term" ng-keyup="$event.keyCode == 13 && search()" />
                                        <span class="ng-cloak" ng-cloak style="color:red" ng-show="myForm.searchTerm.$dirty&&myForm.searchTerm.$isvalid">
                                            <span ng-show="myForm.searchTerm.$error.required">Search term is required</span>
                                        </span>
                                        <div class="input-group-btn">
                                            <button class="btn btn-default" ng-click="search()" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="btn-group explicit-toggle" role="group" aria-label="...">
                                    <div id="explicit" class="language btn">
                                        explicit
                                    </div>
                                    <div id="clean" class="language btn">
                                        clean
                                    </div>
                                </div>
                            </div>
                            <div id="searchResults" class="main-search-results col-md-12 col-sm-12">
                                <h4 class="ng-cloak" ng-cloak ng-show="searchtermTitle">Search Results For '{{searchTerm | uppercase}}'</h4>
                                <p class="ng-cloak" ng-cloak ng-show="searchNoResults">No Results Found</p>
                                <ul class="ng-cloak" ng-cloak>
                                    <li ng-repeat="result in results">
                                        {{result.Text}}  <a href="/{{result.URL}}">details</a>
                                    </li>
                                </ul>
                                <div class="pull-right ng-cloak" ng-cloak ng-click="closeSearch()" ng-show="searchtermTitle"><i class="glyphicon glyphicon-remove-circle"></i> CLOSE</div>
                            </div>
                        </div>
                    </div>
                    
            </div>
        </nav>
    </header>
    <div class="main-container-wrapper">
        <div class="container">
            @RenderSection("featured", required: false)

            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>

        <div class="container">
            <ul>
                <li id="quote-nav-item">@Html.ActionLink("Quotes", "Index", "Quote")</li>
                <li id="artist-nav-item">@Html.ActionLink("Artists", "Index", "Artist")</li>
                <li id="album-nav-item">@Html.ActionLink("Albums", "Index", "Album")</li>
                <li id="track-nav-item">@Html.ActionLink("Tracks", "Index", "Track")</li>
            </ul>
            @Html.Partial("_LoginPartial")
            <p>&copy; @DateTime.Now.Year</p>

        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/Scripts/sixteenbars-utilities.js")
    @Scripts.Render("~/Scripts/angular.min.js")
    @Scripts.Render("~/Scripts/sixteenBars-search.js")




    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-563e10cde2a16f18" async="async"></script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-69874315-1', 'auto');
        ga('send', 'pageview');

    </script>

</body>


</html>
