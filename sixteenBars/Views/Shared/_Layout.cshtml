<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta content="@ViewBag.OGTitle" property="og:title" />
    <meta content="@ViewBag.OGDescription" property="og:description">
    <meta property="fb:app_id" content="@ViewBag.OGAppID" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />


    @*<base href="http://www.rhyme4rhyme.com/">*@
    @*<base href="http://www.invisiblefury.com/sixteenbars/">*@
    <!-- Bootstrap -->
    <!--Use the CDN to fix a bug that appears in Chrome where glyphicons dont display-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link href="~/Content/sixteenBars.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
    display: none !important;
    }
        </style>
</head>



<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <p class="navbar-brand">@Html.ActionLink("Rhyme 4 Rhyme - (BETA)", "Index", "Home")</p>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul id="nav-items" class="nav navbar-nav">
                        <li id="quote-nav-item">@Html.ActionLink("Quotes", "Index", "Quote")</li>
                        <li id="artist-nav-item">@Html.ActionLink("Artists", "Index", "Artist")</li>
                        <li id="album-nav-item">@Html.ActionLink("Albums", "Index", "Album")</liid>
                        <li id="track-nav-item">@Html.ActionLink("Tracks", "Index", "Track")</li>
                    </ul>


                    <div id="searchApp" ng-app="SearchApp" >
                        <div ng-controller="SearchController">
                            <div class="navbar-form col-sm-12 col-md-3 pull-right" role="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search" ng-model="searchTerm" name="srch-term" id="srch-term">
                                    <span class="ng-cloak" ng-cloak style="color:red" ng-show="myForm.searchTerm.$dirty&&myForm.searchTerm.$isvalid">
                                        <span ng-show="myForm.searchTerm.$error.required">Search term is required</span>
                                    </span>
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" ng-click="search()" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <div id="searchResults" class="main-search-results col-md-12  pull-right">
                                <ul class="ng-cloak" ng-cloak>
                                    <li ng-repeat="quote in quotes">
                                        <em>"{{quote.Text}}"</em>  <a href="/quote/details?id={{quote.Id}}">details</a> <br/> <a href="/artist/details?id={{quote.Artist.Id}}">{{quote.Artist.Name}}</a> - <a href="/track/details?id={{quote.Track.Id}}">{{quote.Track.Title}}</a>
                                        
                                    </li>
                                </ul>
                            </div>
                        </div>
                        
                    </div>

                </div><!--/.nav-collapse -->
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderSection("featured", required: false)
        
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    <footer>
        
        <div class="container">
            <div class="login-container">
                @Html.Partial("_LoginPartial")
            </div>
            <p>&copy; @DateTime.Now.Year</p>
            
        </div>
        
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/Scripts/sixteenbars-utilities.js")
    @Scripts.Render("~/Scripts/angular.min.js")
    @Scripts.Render("~/Scripts/sixteenBars-search.js")

    
    

    @RenderSection("scripts", required: false)
</body>


</html>
