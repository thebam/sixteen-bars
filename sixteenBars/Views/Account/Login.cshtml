@model sixteenBars.Models.LoginModel


<h1>Login</h1>

<section id="loginForm" class="col-md-7">
<h3>Use your Rhyme 4 Rhyme account to log in.</h3>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group row">
        @Html.LabelFor(m => m.UserName,new { @class="col-md-3"})
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.UserName,new { @class="form-control"})
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="form-group row">        
        <div class="col-md-3">
            @Html.LabelFor(m => m.RememberMe)
        </div>
        <div class="col-md-9">
            @Html.CheckBoxFor(m => m.RememberMe)
        </div>
     </div>
     <input type="submit" value="Log in" class="btn btn-standard col-md-offset-3" />
        <p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
        }
</section>

<div class="social col-md-5" id="socialLoginForm">
    <h3>Use another service to log in.</h3>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
