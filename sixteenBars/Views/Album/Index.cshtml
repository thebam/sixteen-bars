@model IEnumerable<sixteenBars.Models.AlbumIndexViewModel>


<h2>Albums</h2>
@if (User.IsInRole("admin") || User.IsInRole("editor")) { 
<p>
    @Html.ActionLink("Add New Album", "Create")
</p>
}
@if (Model.Count() > 0)
{
    <div class="index-list">

        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-8">
    @Html.DisplayFor(modelItem => item.Title)<br/>@Html.ActionLink("details", "Details", new { id = item.Id })
    </div>
    <div class="col-md-3">
    @Html.ActionLink(item.ArtistName, "Details", "Artist", new { id = item.ArtistId }, null)
    </div>
    <div class="col-md-1">

    @if (User.IsInRole("admin") || User.IsInRole("editor"))
    {

        @: | @Html.ActionLink("Edit", "Edit", new { id = item.Id })
















        if (item.IsDeleteable)
        {

            @: | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
    }
    </div>
</div>
        }
         <div class="clearfix"></div>
    </div>
}
else
{
    <p>No Albums Found</p>
}
