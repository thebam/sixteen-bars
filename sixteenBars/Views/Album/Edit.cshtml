@model sixteenBars.Library.Album

@Styles.Render("~/Content/themes/base/css")
<h1>Edit Album</h1>
@if (Model != null)
{
using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h2>@ViewBag.ErrorMessage</h2>
    

        @Html.HiddenFor(model => model.Id)
    <div class="form">
        <div class="form-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="form-element">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-label">
            @Html.LabelFor(model => model.Artist.Name)
        </div>
        <div class="form-element">
            @Html.EditorFor(model => model.Artist.Name)
            @Html.ValidationMessageFor(model => model.Artist.Name)
        </div>

        <div class="form-label">
            @Html.LabelFor(model => model.ReleaseDate)
        </div>
        <div class="form-element">
            @Html.EditorFor(model => model.ReleaseDate)
            @Html.ValidationMessageFor(model => model.ReleaseDate)
        </div>



        <div style="margin:15px 0">
            <input type="submit" value="Save" class="btn-inverse" />
        </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", "Album", new { @class = "btn btn-back" })
            &nbsp;
            @Html.ActionLink("Delete", "Delete", "Album", new { id = Model.Id }, new { @class = "btn btn-remove" })
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryui")
            @Scripts.Render("~/bundles/jqueryval")
            @Scripts.Render("~/bundles/sixteenbars")
            <script>

                $(document).ready(function () {
                    initialize("", "ReleaseDate", true);
                });


            </script>
        }
        }
        else
        {
        <p>Album Not Found</p>
        }
