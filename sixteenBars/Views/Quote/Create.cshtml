@model sixteenBars.Models.QuoteViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Quote</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Artists)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ArtistId,Model.Artists,"Select Artist")
            @Html.EditorFor(model => model.ArtistName)
            @Html.ValidationMessageFor(model => model.ArtistId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Tracks)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TrackId,Model.Tracks,"Select Track")
            @Html.EditorFor(model => model.TrackName)
            @Html.ValidationMessageFor(model => model.TrackId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/sixteenbars")
}
