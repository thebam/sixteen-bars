@model IEnumerable<sixteenBars.Library.Quote>

<h1>Quotes</h1>
@if (Model != null) {
    if (User.IsInRole("admin") || User.IsInRole("editor")) { 
<p>
    @Html.ActionLink("Add New Quote", "Create")
</p>
    }

    <table class="index-list table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Track)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="quote">@Html.DisplayFor(modelItem => item.Text)</span> @Html.ActionLink("details", "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink(item.Artist.Name, "details", "artist", new { id = item.Artist.Id }, null)
                </td>
                <td>
                    @Html.ActionLink(item.Track.Title, "details", "track", new { id = item.Track.Id }, null)
                </td>
                <td>
                    @if (User.IsInRole("admin") || User.IsInRole("editor"))
                    {
                        @: |
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @: |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
        }

    </table>

}
else
{
    <p>No Quotes Found.</p>
    }
