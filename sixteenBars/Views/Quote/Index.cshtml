@model IEnumerable<sixteenBars.Library.Quote>

<h2>Quotes</h2>

<p>
    @Html.ActionLink("Add New Quote", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Track)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span class="quote">@Html.DisplayFor(modelItem => item.Text)</span>
        </td>
        <td>
            @Html.ActionLink(item.Artist.Name, "details", "artist", new { id=item.Artist.Id},null)
        </td>
        <td>
            @Html.ActionLink(item.Track.Title, "details", "track", new { id = item.Track.Id }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
