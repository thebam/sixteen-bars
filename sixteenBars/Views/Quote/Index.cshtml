@model IEnumerable<sixteenBars.Library.Quote>

<h1>Quotes</h1>
@if (Model != null) {
    if (User.IsInRole("admin") || User.IsInRole("editor")) { 
<p>
    @Html.ActionLink("Add New Quote", "Create")
</p>
}
<div class="index-list">
    @foreach (var item in Model)
    {
    <div class="row">
        <div class="col-md-6">
            <span class="quote">@Html.DisplayFor(modelItem => item.Text)</span> <br />@Html.ActionLink("details", "Details", new { id = item.Id })
        </div>
        <div class="col-md-2">
            @Html.ActionLink(item.Artist.Name, "details", "artist", new { id = item.Artist.Id }, null)
        </div>
        <div class="col-md-3">
            @Html.ActionLink(item.Track.Title, "details", "track", new { id = item.Track.Id }, null)
        </div>
        <div class="col-md-1">
            @if (User.IsInRole("admin") || User.IsInRole("editor"))
            {
                @: |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @: |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </div>
    </div>
    }
    <div class="clearfix"></div>
    </div>
    }
    else
    {
    <p>No Quotes Found.</p>
    }
