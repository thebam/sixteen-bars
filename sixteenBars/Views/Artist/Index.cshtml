@model IEnumerable<sixteenBars.Models.ArtistIndexViewModel>

<h2>Artists</h2>

@if (User.IsInRole("admin") || User.IsInRole("editor"))
{
<p>
    @Html.ActionLink("Add New Artist", "Create")
</p>
}
@if (Model != null)
{
    <table class="index-list table table-striped table-hover">
        <tr>
            <th>
               NAME
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name) @Html.ActionLink("details", "Details", new { id = item.Id })
                </td>
                <td>

                    
                    @if (User.IsInRole("admin") || User.IsInRole("editor"))
                    {
                        @: |
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        if (item.IsDeleteable)
                        {
                            @:| @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
<p>No Artists Found</p>
}
