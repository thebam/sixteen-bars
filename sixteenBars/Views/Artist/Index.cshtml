@model IEnumerable<sixteenBars.Models.ArtistIndexViewModel>

<h2>Artists</h2>

@if (User.IsInRole("admin") || User.IsInRole("editor"))
{
    <p>
        @Html.ActionLink("Add Artist", "Create","Artist", new { @class = "btn btn-add" })
    </p>
}
@if (Model != null)
{

    <div class="index-list">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-11">
                    @Html.DisplayFor(modelItem => item.Name)<br/>@Html.ActionLink("details", "Details", new { id = item.Id })
                </div>
                <div class="col-md-1">
                    @if (User.IsInRole("admin") || User.IsInRole("editor"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        if (item.IsDeleteable)
                        {
                            @:<br/> @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    }
                </div>

            </div>
        }
                <div class="clearfix"></div>
            </div>
}
        else
        {
        <p>No Artists Found</p>
        }
