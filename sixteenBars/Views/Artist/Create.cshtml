@model sixteenBars.Library.Artist


<h1>Add New Artist</h1>
<h2>@ViewBag.ErrorMessage</h2>
<div ng-app="ArtistApp">
    <div ng-controller="ArtistController">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "quoteForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
    <div class="form">



        <div class="form-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="form-element">
            <input type="text" id="Name" ng-blur="existsArtistName()" ng-model="artistName" name="Name" placeholder="Artist Name" required />
        </div>


        <div ng-show="artistExists">
            This artist already exists.
        </div>
        <p ng-show="artistExistsSubmit" style="margin-top:15px;">
            <input type="submit" value="Add Artist" class="btn-inverse" />
        </p>
    </div>

        }
        
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index", "Artist", new { @class = "btn btn-back" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/sixteenbars-artist-exists.js"></script>
}
