@model sixteenBars.Models.ArtistDetailViewModel
@using sixteenBars.Library;

<h1>
    @Model.Name
</h1>
@if (Model.Id > 0 && !String.IsNullOrEmpty(Model.Name))
{
    <div class="row lower-details">
        <div id="artistInfo" class="col-md-5 artist-block">
            @if (!String.IsNullOrWhiteSpace(Model.Image))
            {
                <img class="img-responsive" style="padding-bottom:0;" src="@Model.Image" />
                <br/>
                <em style="font-size:small;">&copy; @Model.ImageCopyright</em>
            }
            else
            {
                <img class="img-responsive" src="http://www.rhyme4rhyme.com/Images/rhyme-4-rhyme-logo.png" />
            }
            <div style="clear:both"></div>
            <h2>Information</h2>
            <p><strong>Real Name</strong> : @Model.RealName</p>
            <p><strong>Date of Birth</strong> : @Model.BirthDate.ToString("MM/dd/yyyy")</p>
            <p><strong>Origin</strong> : @Model.Location</p>
        </div>
        <div class="col-md-7">
            
            <h2>Quotes</h2>
            @if (Model.Quotes.Count < 1)
            {
            <p>No Quotes Found</p>
            }
            else
            {
            <div >
                @foreach (var item in Model.Quotes)
                    {
                    <div class="row">
                        <div class="col-md-12">
                            <span class="quote">@Html.ActionLink(item.Text, URLClean.Clean(item.Artist.Name) + "/" + URLClean.Clean(item.Text), "Quotes")</span>
                        </div>
                    </div>
                    }
            </div>
            }


            <div style="clear:both;margin-bottom:15px;">
                <h2>Albums</h2>

                @if (Model.Albums.Count < 1)
            {
            <p>No Albums Found</p>
            }
            else
            {
            <div>
                @foreach (var item in Model.Albums)
                    {
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ActionLink(item.Title, URLClean.Clean(item.Artist.Name) + "/" + URLClean.Clean(item.Title), "Albums")
                        </div>
                    </div>
                    }
            </div>
            }
            </div>
            <h2>Biography</h2>

            <p>@Model.Biography</p>
        </div>
    </div>
        <div>
            @Html.ActionLink("Back to List", "Index", "Artist", null, new { @class = "btn btn-back" })
            @if (User.IsInRole("admin") || User.IsInRole("editor"))
            {
                @Html.ActionLink("Edit", "Edit", "Artist", new { id = Model.Id }, new { @class = "btn btn-edit" })
            }
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Delete", "Delete", "Artist", new { id = Model.Id }, new { @class = "btn btn-remove" })
            }

        </div>


        @section Scripts{
            @Scripts.Render("~/bundles/sixteenbars")

        }
}
else
{
    <p>No Artist Found</p>
}
